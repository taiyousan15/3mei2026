{
  "alwaysThinkingEnabled": true,
  "hooks": {
    "Stop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": ".claude/hooks/session-log-github.sh"
          }
        ]
      }
    ]
  },
  "permissions": {
    "allow": [
      "Bash",
      "Read",
      "Write",
      "Edit",
      "Glob",
      "Grep",
      "Task",
      "WebFetch",
      "WebSearch"
    ],
    "deny": []
  },
  "preferredModel": "sonnet",
  "maxParallelAgents": 5,
  "qualityGates": {
    "codeReviewMinScore": 80,
    "testCoverageMin": 80,
    "securityScanRequired": true
  }
}
